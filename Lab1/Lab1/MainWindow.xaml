<Window x:Class="Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="317" Width="470">
    <Grid>
        <DatePicker x:Name="Picker" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,52,0,0" Text="Pick your birthday"/>
        <Button x:Name="ButtonPick" Content="Pick" HorizontalAlignment="Center" Margin="0,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.224,-0.051" Click="ButtonPick_Click"/>
        <TextBlock x:Name="TextMain" HorizontalAlignment="Center" Margin="0,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.501,-2.157"/>
        <TextBlock x:Name="Zodiac" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center"/>

    </Grid>
</Window>
